{% extends ('basefront/base.html.twig') %}
{% block body %}
  <!-- Events Section-->
    <section class="py-5">

      <div class="container py-5">

        <header class="mb-4 text-center mb-5">
          <p class="text-serif mb-0 text-primary">Celestial</p>
          <h2 class="text-uppercase">Tickets available</h2>
        </header>
 {% for billet in billets %}
        <div class="p-4 p-lg-5 bg-light text-center mb-4">
          <div class="row gy-4 align-items-center">
            <div class="col-lg-3">
              <div class="d-flex align-items-center justify-content-center justify-content-lg-start">
                <p class="text-gray text-xl h1 mb-0">{{ billet.embarquement ? billet.embarquement|date('d') : '' }}</p>
                <div class="ms-2">
                  <h5 class="mb-0">{{ billet.embarquement ? billet.embarquement|date('m') : '' }}</h5>
                  <p class="text-small mb-0 text-muted">{{ billet.embarquement ? billet.embarquement|date('Y') : '' }}</p>
                </div>
              </div>
            </div>
            <div class="col-lg-6 text-center">
              <h4 class="text-primary mb-1"> <a class="reset-anchor" href="text.html"><td>{{ billet.localisation }}</td></a></h4>
              <p class="text-serif mb-0 text-muted">Embarquement: {{ billet.embarquement ? billet.embarquement|date('Y-m-d') : '' }}</p>
              <p class="text-serif mb-0 text-muted">Chair: {{ billet.chairBillet }}</p>
            </div>
                <div class="col-lg-3 text-lg-end">
                <a class="btn btn-outline-primary px-4" href="{{ path('reservation_new') }}">Reserve</a>
                </div>
          </div>
        </div>
{% else %}
            <div>
                <h4 colspan="7">no records found</h4>
            </div>
{% endfor %}
         </div>
          <div class="navigation">
            {{ knp_pagination_render(billets) }}
        </div>
    </section>
  
    {% endblock %}