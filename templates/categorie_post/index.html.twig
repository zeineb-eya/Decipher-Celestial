        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{{ knp_pagination_render(categorie_posts) }}

  <button class="btn btn-light">   <a href="{{ path('categorie_post_new') }}">Create new</a> </button>
{% endblock %}
